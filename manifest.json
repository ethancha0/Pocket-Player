{
  "manifest_version": 3,
  "name": "Custom PiP Controller",
  "version": "1.0",
  "description": "Adds more controls to Picture-in-Picture.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
